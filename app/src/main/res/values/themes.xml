<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/AppToolbar.Light</item>
    </style>

    <!--AppToolbar-->
    <style name="AppToolbar.Light" parent="Widget.AppCompat.Toolbar">
        <item name="navigationIcon">@drawable/ic_icon_back_dark</item>
        <item name="maxButtonHeight">@dimen/app_toolbar_size</item>
        <item name="android:background">@drawable/underline_toolbar</item>
        <item name="android:minHeight">@dimen/app_toolbar_size</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="titleTextAppearance">@style/AppToolbar.Light.Title</item>
        <item name="titleMargin">0dip</item>
        <item name="contentInsetStartWithNavigation">0dip</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="AppToolbarThemeWrapper" parent="AppTheme">
        <item name="android:textSize">18sp</item>
    </style>


</resources>